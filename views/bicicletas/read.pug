extends ../layout

block content
  a(href = '/bicicletas') Volver 

  br
  br
  br

  h1  Consultando Datos Bicicleta 

  br
  br

  form(action =`/bicicletas/${bici.id}/read` method ='post')
    label(for='id') ID: 
    input#id(type='text' name ='id' value=bici.id readonly)
    br
    label(for='color') Color: 
    input#color(type='text' name ='color' value=bici.color readonly)
    br
    label(for='modelo') Modelo: 
    input#modelo(type='text' name ='modelo' value=bici.modelo readonly)
    br
    label(for='lat') Latitud: 
    input#lat(type='text' name ='lat' value=bici.ubicacion[0] readonly)
    br
    label(for='lng') Longitud: 
    input#lng(type='text' name ='lng' value=bici.ubicacion[1] readonly)
    br
    br
    input.btn(type='submit' value='Volver')

